rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to create entries in waitlist (for signup form)
    // Allow authenticated users to read waitlist (for admin dashboard)
    match /waitlist/{document} {
      allow create: if true;
      allow read: if request.auth != null;
      allow update, delete: if false;
    }
    
    // Allow webhook to create orders, allow any authenticated user to read/update orders
    match /orders/{document} {
      allow create: if true; // Webhook can create orders
      allow read, update, delete: if request.auth != null; // Only authenticated users can manage orders
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
